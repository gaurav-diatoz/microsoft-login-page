<!doctype html>
<html>
  <head>
    <title>Sign In</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <style>
      /* ================================
   GLOBAL RESET
================================ */
      * {
        box-sizing: border-box;
        font-family: "Segoe UI", Arial, sans-serif;
      }

      html,
      body {
        margin: 0 !important;
        height: 100% !important;
        background: #f5f7fa !important;
      }

      /* ================================
   FIX AZURE B2C WRAPPERS
================================ */

      /* Kill Azure default container layout */
      body > .container,
      body > .container > .row,
      body > .container > .row > div,
      .panel,
      .panel-body {
        all: unset !important;
        display: block !important;
        width: auto !important;
        height: auto !important;
      }

      /* ================================
   MAIN LAYOUT
================================ */

      .b2c-layout {
        display: flex;
        height: 100vh;
        width: 100%;
      }

      /* LEFT PANEL */
      .left-panel {
        width: 32%;
        background: #ffffff;
        display: flex;
        justify-content: center;
        align-items: center;
        border-right: 1px solid #e5e7eb;
      }

      .login-box {
        width: 100%;
        max-width: 360px;
      }

      .login-box h2 {
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 20px;
        color: #111827;
      }

      /* ================================
   AZURE B2C FORM FIX
================================ */

      #api {
        width: 100% !important;
      }

      /* Remove Microsoft headings */
      #api h1,
      #api h2,
      #api h3,
      #api .intro {
        display: none !important;
      }

      /* Attribute list layout */
      #attributeList ul {
        list-style: none !important;
        padding: 0 !important;
        margin: 0 !important;
        display: flex;
        flex-direction: column;
        gap: 12px;
      }

      /* Labels */
      #attributeList label {
        font-size: 13px !important;
        font-weight: 600;
        color: #374151 !important;
        margin-bottom: 4px;
        display: block !important;
      }

      /* Inputs */
      #attributeList input[type="email"],
      #attributeList input[type="password"],
      #attributeList input[type="text"] {
        width: 100% !important;
        height: 44px !important;
        padding: 0 14px !important;
        border-radius: 6px !important;
        border: 1px solid #d1d5db !important;
        font-size: 14px !important;
        background: #fff !important;
      }

      /* Focus */
      #attributeList input:focus {
        outline: none !important;
        border-color: #2563eb !important;
        box-shadow: 0 0 0 1px #2563eb !important;
      }

      /* Checkbox row */
      #attributeList input[type="checkbox"] {
        margin-right: 6px !important;
      }

      /* Forgot password & links */
      #api a {
        font-size: 13px !important;
        color: #2563eb !important;
        text-decoration: none !important;
      }

      #api a:hover {
        text-decoration: underline !important;
      }

      /* Buttons */
      .buttons button,
      .buttons input[type="submit"] {
        width: 100% !important;
        height: 44px !important;
        border-radius: 6px !important;
        background: #2563eb !important;
        color: #fff !important;
        border: none !important;
        font-size: 15px !important;
        font-weight: 600 !important;
        cursor: pointer !important;
      }

      /* Social login buttons */
      .claims-provider-list button {
        width: 100% !important;
        height: 42px !important;
        border-radius: 6px !important;
        font-size: 14px !important;
        margin-top: 8px !important;
      }

      /* OR separator */
      .separator {
        text-align: center !important;
        margin: 12px 0 !important;
        font-size: 13px !important;
        color: #6b7280 !important;
      }

      /* ================================
   RIGHT PANEL
================================ */

      .right-panel {
        width: 68%;
        background: linear-gradient(135deg, #0a0f2c, #1b2a6b);
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 40px;
      }

      .brand h1 {
        font-size: 48px;
        letter-spacing: 2px;
      }

      .brand p {
        font-size: 15px;
        opacity: 0.85;
      }

      /* ================================
   RESPONSIVE
================================ */

      @media (max-width: 900px) {
        .b2c-layout {
          flex-direction: column;
        }

        .left-panel,
        .right-panel {
          width: 100%;
          height: auto;
        }
      }
    </style>
  </head>
  <body>
    <div class="b2c-layout">
      <!-- LEFT LOGIN FORM -->
      <div class="left-panel">
        <div class="login-box">
          <h2>Sign In Test</h2>
          <div id="api"></div>
        </div>
      </div>

      <!-- RIGHT BRAND SECTION -->
      <div class="right-panel">
        <div class="brand">
          <h1>SOLUM</h1>
          <p>
            Smart Retail solution unifying ESL, digital signage, AI & IoT
            technologies
          </p>
        </div>
      </div>
    </div>
  </body>
</html>
