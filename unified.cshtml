/* =========================
   LEFT + RIGHT PANEL LAYOUT
========================= */

.b2c-layout {
  display: flex;
  width: 100%;
  height: 100vh;
  position: relative;
  z-index: 1;
}

/* LEFT PANEL (SIGN-IN FORM) */
.b2c-left {
  width: 40%;
  min-width: 420px;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40px;
  box-shadow: 8px 0 30px rgba(0, 0, 0, 0.05);
}

.b2c-left .panel {
  width: 100%;
  max-width: 420px;
  border: none !important;
  box-shadow: none !important;
}

/* RIGHT PANEL (BRAND AREA) */
.b2c-right {
  width: 60%;
  background: linear-gradient(135deg, #0a0f2c, #1b2a6b);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 60px;
}

.b2c-brand h1 {
  font-size: 52px;
  font-weight: 700;
  margin-bottom: 12px;
  letter-spacing: 2px;
}

.b2c-brand p {
  font-size: 16px;
  opacity: 0.85;
  max-width: 420px;
  line-height: 1.6;
}

/* RESPONSIVE */
@media (max-width: 900px) {
  .b2c-layout {
    flex-direction: column;
  }

  .b2c-left,
  .b2c-right {
    width: 100%;
    min-width: unset;
    height: auto;
  }

  .b2c-right {
    padding: 40px 20px;
  }
}

/* =====================================================
   AZURE B2C SIGN-IN UI FIX (REAL DOM TARGETING)
===================================================== */

/* 1) Sign-in title → LEFT */
#api .intro h2 {
  text-align: left !important;
  margin-bottom: 6px;
}

/* 2) Hide subtitle */
#api .intro p {
  display: none !important;
}

/* 3) Show Email & Password labels */
#api .entry-item label {
  display: block !important;
  text-align: left !important;
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 6px;
}

/* 4) Password label + Forgot password on same line */
#api .password-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 6px;
}

/* Forgot password → RIGHT */
#api #forgotPassword {
  margin-left: auto !important;
  font-size: 13px;
  text-align: right;
  position: static !important;
  white-space: nowrap;
}

/* 5) Keep me signed in → LEFT */
#api .rememberMe {
  text-align: left !important;
  width: 100% !important;
  margin-top: 6px !important;
  margin-left: 0 !important;
}

/* 6) Full-width Sign-in button */
#api .buttons button,
#api #next {
  width: 100% !important;
  height: 50px !important;
  margin-top: 14px;
  border-radius: 6px;
}

/* Inputs full width */
#api input[type="email"],
#api input[type="password"] {
  width: 100% !important;
}

/* Fix spacing between fields */
#api .entry-item {
  margin-bottom: 12px;
}
