<!doctype html>
<html>

<head>
  <title>Sign in</title>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    /* =========================
       GLOBAL RESET
    ========================= */
    body {
      font-family: Segoe UI, Arial, sans-serif;
      margin: 0;
      background: #fff;
    }

    /* =========================
       LAYOUT (LEFT FORM + RIGHT BRAND)
    ========================= */
    .b2c-layout {
      display: flex;
      width: 100%;
      height: 100vh;
    }

    .b2c-left {
      width: 40%;
      min-width: 420px;
      background: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px;
      box-shadow: 8px 0 30px rgba(0, 0, 0, 0.05);
    }

    .b2c-right {
      width: 60%;
      background: linear-gradient(135deg, #0a0f2c, #1b2a6b);
      color: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
    }

    .b2c-brand h1 {
      font-size: 52px;
      font-weight: 700;
      letter-spacing: 2px;
      margin-bottom: 12px;
    }

    .b2c-brand p {
      font-size: 16px;
      opacity: 0.85;
      max-width: 420px;
      line-height: 1.6;
    }

    @media (max-width: 900px) {
      .b2c-layout {
        flex-direction: column;
      }

      .b2c-left,
      .b2c-right {
        width: 100%;
        min-width: unset;
      }
    }

    /* =========================
       AZURE B2C FORM STYLE
    ========================= */

    /* Title LEFT */
    #api .intro h2 {
      text-align: left !important;
      font-size: 26px;
      margin-bottom: 12px;
    }

    /* Hide subtitle */
    #api .intro p {
      display: none !important;
    }

    /* Labels visible */
    #api .entry-item label {
      display: block !important;
      font-size: 14px;
      font-weight: 600;
      text-align: left;
      margin-bottom: 4px;
    }

    /* Inputs */
    #api input[type="email"],
    #api input[type="password"] {
      width: 100% !important;
      height: 48px;
      border-radius: 6px;
      padding: 10px 14px;
      border: 1px solid #605e5c;
      leading-trim: both;
    }

    /* Password + Forgot row */
    #api .password-label {
      display: flex !important;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      margin-bottom: 4px;
    }

    #api #forgotPassword {
      font-size: 13px;
      color: #296ec6;
      text-decoration: none;
      white-space: nowrap;
      position: static !important;
    }

    /* Remember me LEFT */
    #api .rememberMe {
      display: flex !important;
      align-items: center;
      gap: 6px;
      margin-top: 6px;
      width: 100%;
      text-align: left !important;
    }

    /* Sign-in button FULL WIDTH */
    #api .buttons button,
    #api #next {
      width: 100% !important;
      height: 50px !important;
      background: #296ec6;
      border: none;
      border-radius: 6px;
      color: #fff;
      font-size: 16px;
      margin-top: 14px;
      transition: 0.2s;
    }

    #api .buttons button:hover {
      background: #1f5bb5;
    }

    /* Spacing */
    #api .entry-item {
      margin-bottom: 12px;
    }

    /* Remove Azure default alignment hacks */
    .unified_container .rememberMe,
    .unified_container .password-label {
      all: unset !important;
    }
  </style>
</head>

<body>
  <div class="b2c-layout">

    <!-- LEFT PANEL (FORM) -->
    <div class="b2c-left">
      <div class="container unified_container" role="presentation">
        <div class="row">
          <div class="col-lg-6">
            <div class="panel panel-default">
              <div class="panel-body">
                <div id="api" role="main"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- RIGHT PANEL (BRAND) -->
    <div class="b2c-right">
      <div class="b2c-brand">
        <h1>SOLUM</h1>
        <p>
          Smart Retail solution unifying ESL, digital signage, AI & IoT technologies.
        </p>
      </div>
    </div>

  </div>
</body>

</html>
