<!DOCTYPE html>
<html lang="en">
<head>
  <title>SOLUM Sign In</title>

  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link
    href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <style>
    /* =========================
       GLOBAL RESET (B2C SAFE)
    ========================= */
    html, body {
      height: 100%;
      margin: 0;
      font-family: Segoe UI, Arial, sans-serif;
      background: #fff;
    }

    .container,
    .row {
      height: 100%;
      margin: 0 !important;
      padding: 0 !important;
      width: 100%;
    }

    /* =========================
       MAIN LAYOUT (LEFT + RIGHT)
    ========================= */
    .solum-wrapper {
      display: flex;
      height: 100vh;
      width: 100%;
    }

    /* LEFT PANEL (LOGIN FORM) */
    .solum-left {
      width: 38%;
      min-width: 420px;
      background: #ffffff;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px;
      box-shadow: 8px 0 30px rgba(0, 0, 0, 0.05);
      z-index: 2;
    }

    .solum-login-box {
      width: 100%;
      max-width: 380px;
      text-align: left;
    }

    /* RIGHT PANEL (BRAND) */
    .solum-right {
      width: 62%;
      background: linear-gradient(135deg, #050b2e, #1b2a6b);
      color: #ffffff;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 60px;
    }

    .solum-brand h1 {
      font-size: 54px;
      font-weight: 700;
      letter-spacing: 3px;
      margin-bottom: 12px;
    }

    .solum-brand p {
      font-size: 15px;
      opacity: 0.85;
      max-width: 420px;
      line-height: 1.6;
    }

    /* =========================
       AZURE B2C FORM OVERRIDES
    ========================= */

    /* Force form width */
    #api {
      width: 100% !important;
      text-align: left !important;
    }

    /* Title */
    #api .intro h2 {
      font-size: 28px !important;
      font-weight: 600 !important;
      margin-bottom: 6px !important;
      text-align: left !important;
    }

    /* Subtitle */
    #api .intro p {
      font-size: 14px !important;
      color: #6b7280 !important;
      margin-bottom: 22px !important;
      text-align: left !important;
    }

    /* Labels */
    #attributeList ul li label {
      display: block !important;
      font-size: 13px !important;
      font-weight: 600 !important;
      margin-bottom: 6px !important;
      color: #111827 !important;
      text-align: left !important;
    }

    /* Inputs */
    #api input[type="email"],
    #api input[type="password"],
    #api input[type="text"],
    #attributeList ul li input {
      width: 100% !important;
      height: 46px !important;
      padding: 0 14px !important;
      border-radius: 8px !important;
      border: 1.5px solid #d1d5db !important;
      font-size: 14px !important;
      background: #fff !important;
      box-shadow: none !important;
      text-indent: 0 !important;
    }

    /* Remove Azure width constraints */
    #api .entry-item,
    #api .attrEntry,
    #api .attrEntry div {
      width: 100% !important;
    }

    /* Field spacing */
    #attributeList ul li {
      margin-bottom: 16px !important;
    }

    /* Forgot password + remember me row */
    #api .password-label,
    #api .rememberMe {
      display: flex !important;
      justify-content: space-between !important;
      align-items: center !important;
      width: 100% !important;
      margin: 8px 0 16px !important;
      text-align: left !important;
    }

    #api .rememberMe input[type="checkbox"] {
      margin-right: 6px !important;
    }

    /* Sign-in button */
    #api .buttons button,
    #api #next {
      width: 100% !important;
      height: 46px !important;
      border-radius: 8px !important;
      background: #2563eb !important;
      color: #fff !important;
      font-size: 15px !important;
      font-weight: 600 !important;
      border: none !important;
      margin-top: 10px !important;
    }

    #api .buttons {
      text-align: left !important;
    }

    /* Signup text */
    #api .create,
    #api .claims-provider-list-text-links {
      text-align: left !important;
      margin-top: 18px !important;
      font-size: 13px !important;
    }

    /* =========================
       RESPONSIVE
    ========================= */
    @media (max-width: 900px) {
      .solum-wrapper {
        flex-direction: column;
      }
      .solum-left,
      .solum-right {
        width: 100%;
        min-width: unset;
        height: auto;
      }
      .solum-right {
        padding: 40px 20px;
      }
    }
  </style>
</head>

<body>
  <div class="solum-wrapper">

    <!-- LEFT PANEL (AZURE B2C FORM) -->
    <div class="solum-left">
      <div class="solum-login-box">
        <div id="api"></div>
      </div>
    </div>

    <!-- RIGHT PANEL (SOLUM BRAND) -->
    <div class="solum-right">
      <div class="solum-brand">
        <h1>SOLUM</h1>
        <p>
          Smart Retail solution unifying ESL, digital signage, AI & IoT
          technologies
        </p>
      </div>
    </div>

  </div>
</body>
</html>
