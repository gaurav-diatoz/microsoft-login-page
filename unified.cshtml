<!doctype html>
<html>
<head>
  <title>Sign In</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <style>
    * {
      box-sizing: border-box;
      font-family: "Segoe UI", Arial, sans-serif;
    }

    html, body {
      margin: 0;
      height: 100%;
      background: #f5f7fa;
    }

    /* ðŸ”¥ IMPORTANT: Avoid Azure .container conflict */
    .b2c-layout {
      display: flex;
      height: 100vh;
      width: 100%;
    }

    /* LEFT LOGIN PANEL */
    .left-panel {
      width: 35%;
      background: #ffffff;
      display: flex;
      justify-content: center;
      align-items: center;
      border-right: 1px solid #e5e7eb;
    }

    .login-box {
      width: 80%;
      max-width: 400px;
    }

    .login-box h2 {
      font-size: 28px;
      margin-bottom: 20px;
      color: #111827;
    }

    #api {
      margin-top: 10px;
      width: 100%;
    }

    /* RIGHT BRAND PANEL */
    .right-panel {
      width: 65%;
      background: linear-gradient(135deg, #0a0f2c, #1b2a6b);
      color: white;
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: 40px;
    }

    .brand h1 {
      font-size: 48px;
      margin-bottom: 10px;
      letter-spacing: 2px;
    }

    .brand p {
      font-size: 16px;
      opacity: 0.85;
    }

    /* RESPONSIVE */
    @media (max-width: 900px) {
      .b2c-layout {
        flex-direction: column;
      }
      .left-panel,
      .right-panel {
        width: 100%;
        height: 50%;
      }
    }

    /* ===============================
       AZURE B2C FORM STYLING
       =============================== */

    #attributeList,
    #attributeList ul {
      width: 100%;
    }

    #attributeList ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    #attributeList ul li {
      margin-bottom: 14px;
    }

    #attributeList ul li label {
      font-size: 13px;
      font-weight: 600;
      color: #374151;
      margin-bottom: 4px;
      display: block;
    }

    #attributeList input[type="email"],
    #attributeList input[type="password"],
    #attributeList input[type="text"] {
      width: 100% !important;
      height: 44px;
      padding: 0 14px;
      border-radius: 6px;
      border: 1px solid #d1d5db;
      font-size: 14px;
      transition: 0.2s;
      background: #fff;
    }

    #attributeList input:focus {
      outline: none;
      border-color: #2563eb;
      box-shadow: 0 0 0 1px #2563eb;
    }

    #attributeList input[type="checkbox"] {
      margin-right: 6px;
    }

    #attributeList a {
      font-size: 13px;
      color: #2563eb;
      text-decoration: none;
    }

    #attributeList a:hover {
      text-decoration: underline;
    }

    .buttons button,
    .buttons input[type="submit"] {
      width: 100% !important;
      height: 44px;
      border-radius: 6px;
      background: #2563eb !important;
      color: #fff !important;
      border: none;
      font-size: 15px;
      font-weight: 600;
      cursor: pointer;
    }

    .buttons button:hover {
      background: #1d4ed8 !important;
    }

    #api .claims-provider-list button {
      width: 100%;
      border-radius: 6px;
      height: 42px;
      font-size: 14px;
    }

    #api h1,
    #api h2,
    #api h3,
    #api .intro {
      display: none !important;
    }
  </style>
</head>
<body>
  <div class="b2c-layout">

    <!-- LEFT LOGIN FORM -->
    <div class="left-panel">
      <div class="login-box">
        <h2>Sign In Latest</h2>
        <div id="api"></div>
      </div>
    </div>

    <!-- RIGHT BRAND SECTION -->
    <div class="right-panel">
      <div class="brand">
        <h1>SOLUM</h1>
        <p>
          Smart Retail solution unifying ESL, digital signage, AI & IoT
          technologies
        </p>
      </div>
    </div>

  </div>
</body>
</html>
